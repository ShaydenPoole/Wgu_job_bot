<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0">

  <!-- Strength selection: only active when stage is strengths_selection -->
  <category>
    <pattern>1</pattern>
    <template>
      <condition name="stage">
        <li value="strengths_selection">
          <think>
            <set name="strengths">problem-solving</set>
            <set name="stage">weaknesses_selection</set>
          </think>
          Got it—your strengths are problem-solving.  
          Now please pick an area to improve by typing its number:
          4. Public speaking  
          5. Time management  
          6. Teamwork  
        </li>
        <li>
          I’m not asking for that right now. Please respond with your top strength by typing 1, 2, or 3.
        </li>
      </condition>
    </template>
  </category>

