<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0">

  <topic name="salary_info">

    <category>
      <pattern>DATA ANALYST</pattern>
      <template>
        Data Analyst salaries vary by experience and region.  
        <link>
          <text>View Data Analyst Salaries</text>
          <url>https://www.indeed.com/career/data-analyst/salaries</url>
        </link>
        <button>Learn About This Career</button>
        <button>Return to Main Menu</button>
      </template>
    </category>

    <category>
      <pattern>FULLSTACK DEVELOPER</pattern>
      <template>
        Fullstack Developer salaries are above average due to full-stack expertise.  
        <link>
          <text>View Fullstack Dev Salaries</text>
          <url>https://www.indeed.com/career/full-stack-developer/salaries?from=top_sb</url>
        </link>
        <button>Learn About This Career</button>
        <button>Return to Main Menu</button>
      </template>
    </category>

    <category>
      <pattern>UI DESIGNER</pattern>
      <template>
        UI Designer salaries depend on experience and location.  
        <link>
          <text>View UI Designer Salaries</text>
          <url>https://www.indeed.com/career/user-interface-designer/salaries?from=top_sb</url>
        </link>
        <button>Learn About This Career</button>
        <button>Return to Main Menu</button>
      </template>
    </category>

    <category>
      <pattern>SYSTEM ADMINISTRATOR</pattern>
      <template>
        SysAdmin salaries vary by environment and seniority.  
        <link>
          <text>View SysAdmin Salaries</text>
          <url>https://www.indeed.com/career/systems-administrator/salaries?from=top_sb</url>
        </link>
        <button>Learn About This Career</button>
        <button>Return to Main Menu</button>
      </template>
    </category>

    <category>
      <pattern>MACHINE LEARNING ENGINEER</pattern>
      <template>
        ML Engineer salaries rank high among tech roles.  
        <link>
          <text>View ML Engineer Salaries</text>
          <url>https://www.indeed.com/career/machine-learning-engineer/salaries?from=top_sb</url>
        </link>
        <button>Learn About This Career</button>
        <button>Return to Main Menu</button>
      </template>
    </category>

    <category>
      <pattern>LEARN ABOUT THIS CAREER</pattern>
      <template>
        <think><set name="topic">career_info</set></think>
        <srai><get name="selected_career"/></srai>
      </template>
    </category>

    <category>
      <pattern>RETURN TO MAIN MENU</pattern>
      <template>
        <think><set name="topic">general</set></think>
        <srai>MAIN MENU</srai>
      </template>
    </category>

    <category>
      <pattern>*</pattern>
      <template>
        Sorry, I didn’t catch that. Which salary info?
        <button>Data Analyst</button>
        <button>Fullstack Developer</button>
        <button>UI Designer</button>
        <button>System Administrator</button>
        <button>Machine Learning Engineer</button>
        <button>Return to Main Menu</button>
      </template>
    </category>

  </topic>

  <!-- Global trigger for “Get Salary X” -->
  <category>
    <pattern>GET SALARY *</pattern>
    <template>
      <think><set name="topic">salary_info</set></think>
      <srai><star/></srai>
    </template>
  </category>

</aiml>
