<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0">

  <!-- Kick off the assessment -->
  <category>
    <pattern>CAREER ASSESSMENT</pattern>
    <template>
      <think>
        <set name="question1">none</set>
        <set name="question2">none</set>
        <set name="question3">none</set>
        <set name="assessment_step">1</set>
      </think>
      Let’s begin!  
      <srai>QUESTION 1</srai>
    </template>
  </category>

  <!-- Q1 -->
  <category><pattern>QUESTION 1</pattern>
    <template>
      <think><set name="assessment_step">1</set></think>
      Do you prefer working with logic and data, or visual design and user experience?  
      <button>Logic and Data</button>
      <button>Visual Design and User Experience</button>
    </template>
  </category>
  <category><pattern>LOGIC AND DATA</pattern>
    <template>
      <think>
        <set name="question1">technical</set>
        <set name="assessment_step">2</set>
      </think>
      <srai>QUESTION 2</srai>
    </template>
  </category>
  <category><pattern>VISUAL DESIGN AND USER EXPERIENCE</pattern>
    <template>
      <think>
        <set name="question1">creative</set>
        <set name="assessment_step">2</set>
      </think>
      <srai>QUESTION 2</srai>
    </template>
  </category>

  <!-- Q2 -->
  <category><pattern>QUESTION 2</pattern>
    <template>
      <think><set name="assessment_step">2</set></think>
      Do you prefer focusing on details and optimization, or building new systems from scratch?  
      <button>Details and Optimization</button>
      <button>Building New Systems</button>
    </template>
  </category>
  <category><pattern>DETAILS AND OPTIMIZATION</pattern>
    <template>
      <think>
        <set name="question2">detail</set>
        <set name="assessment_step">3</set>
      </think>
      <srai>QUESTION 3</srai>
    </template>
  </category>
  <category><pattern>BUILDING NEW SYSTEMS</pattern>
    <template>
      <think>
        <set name="question2">systems</set>
        <set name="assessment_step">3</set>
      </think>
      <srai>QUESTION 3</srai>
    </template>
  </category>

  <!-- Q3 -->
  <category><pattern>QUESTION 3</pattern>
    <template>
      <think><set name="assessment_step">3</set></think>
      Do you prefer working independently on focused tasks, or collaborating with teams on larger projects?  
      <button>Working Independently</button>
      <button>Collaborating with Teams</button>
    </template>
  </category>
  <category><pattern>WORKING INDEPENDENTLY</pattern>
    <template>
      <think><set name="question3">independent</set></think>
      <srai>CALCULATE RESULTS</srai>
    </template>
  </category>
  <category><pattern>COLLABORATING WITH TEAMS</pattern>
    <template>
      <think><set name="question3">collaborative</set></think>
      <srai>CALCULATE RESULTS</srai>
    </template>
  </category>

  <!-- Compute best_career -->
  <category><pattern>CALCULATE RESULTS</pattern>
    <template>
      <think>
        <condition name="question1">
          <li value="technical">
            <condition name="question2">
              <li value="detail">
                <condition name="question3">
                  <li value="independent"><set name="best_career">Data Analyst</set></li>
                  <li value="collaborative"><set name="best_career">System Administrator</set></li>
                </condition>
              </li>
              <li value="systems">
                <condition name="question3">
                  <li value="independent"><set name="best_career">Machine Learning Engineer</set></li>
                  <li value="collaborative"><set name="best_career">Fullstack Developer</set></li>
                </condition>
              </li>
            </condition>
          </li>
          <li value="creative">
            <condition name="question2">
              <li value="detail">
                <condition name="question3">
                  <li value="independent"><set name="best_career">UI Designer</set></li>
                  <li value="collaborative"><set name="best_career">UI Designer</set></li>
                </condition>
              </li>
              <li value="systems">
                <condition name="question3">
                  <li value="independent"><set name="best_career">Fullstack Developer</set></li>
                  <li value="collaborative"><set name="best_career">Fullstack Developer</set></li>
                </condition>
              </li>
            </condition>
          </li>
        </condition>
        <set name="assessment_result"><get name="best_career"/></set>
      </think>

      <b>Based on your responses, your best career match is: <get name="best_career"/></b>
      <condition name="best_career">
        <li value="Data Analyst">Data Analysts work with data to help businesses make better decisions, using SQL, Python, R, and Excel.</li>
        <li value="Fullstack Developer">Fullstack Developers build both frontend and backend of web applications.</li>
        <li value="UI Designer">UI Designers craft intuitive and beautiful user interfaces.</li>
        <li value="System Administrator">System Administrators maintain networks and servers for reliability and security.</li>
        <li value="Machine Learning Engineer">ML Engineers design and deploy AI systems and algorithms.</li>
      </condition>

      Would you like to know more about this career?
      <button>Yes</button>
      <button>No</button>
    </template>
  </category>

  <!-- After result -->
  <topic name="assessment_result">
    <category><pattern>YES</pattern>
      <template>
        <think><set name="topic">career_info</set></think>
        <condition name="best_career">
          <li value="Data Analyst"><srai>DATA ANALYST</srai></li>
          <li value="Fullstack Developer"><srai>FULLSTACK DEVELOPER</srai></li>
          <li value="UI Designer"><srai>UI DESIGNER</srai></li>
          <li value="System Administrator"><srai>SYSTEM ADMINISTRATOR</srai></li>
          <li value="Machine Learning Engineer"><srai>MACHINE LEARNING ENGINEER</srai></li>
        </condition>
      </template>
    </category>

    <category><pattern>NO</pattern>
      <template>
        Thank you for completing the assessment!  
        <think><set name="topic">general</set></think>
        <button>Return to Main Menu</button>
      </template>
    </category>

    <category><pattern>RETURN TO MAIN MENU</pattern>
      <template>
        <think><set name="topic">general</set></think>
        <srai>MAIN MENU</srai>
      </template>
    </category>

    <category><pattern>*</pattern>
      <template>
        I didn’t understand that. Would you like to know more about your match?
        <button>Yes</button>
        <button>No</button>
        <button>Return to Main Menu</button>
      </template>
    </category>
  </topic>

</aiml>
