<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0">
  <!-- Greeting triggers -->
  <category>
    <pattern>HI</pattern>
    <template>
      Hello! I'm CareerBot. To begin, select your top strength by typing its number:
      1. Problem-solving
      2. Creativity
      3. Data analysis
      <think>
        <set name="stage">strengths_selection</set>
      </think>
    </template>
  </category>
  
  <category>
    <pattern>HELLO</pattern>
    <template><srai>HI</srai></template>
  </category>
  
  <category>
    <pattern>START</pattern>
    <template><srai>HI</srai></template>
  </category>
  
  <category>
    <pattern>HEY</pattern>
    <template><srai>HI</srai></template>
  </category>
</aiml>