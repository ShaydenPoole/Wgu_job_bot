<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0">

  <!-- Return to main menu -->
  <category>
    <pattern>RETURN TO MAIN MENU</pattern>
    <template>
      <think><set name="topic">general</set></think>
      <srai>MAIN MENU</srai>
    </template>
  </category>

  <!-- Greetings -->
  <category><pattern>HELLO</pattern><template><srai>MAIN MENU</srai></template></category>
  <category><pattern>HI</pattern><template><srai>MAIN MENU</srai></template></category>
  <category><pattern>HEY</pattern><template><srai>MAIN MENU</srai></template></category>
  <category><pattern>START</pattern><template><srai>MAIN MENU</srai></template></category>

  <!-- Main menu -->
  <category>
    <pattern>MAIN MENU</pattern>
    <template>
      <think><set name="topic">general</set></think>
      Hello! Welcome to the CS Graduate Career Services chatbot.  
      How can I help you today?
      <button>Career Assessment</button>
      <button>Learn About Careers</button>
      <button>Salary Information</button>
    </template>
  </category>

  <!-- Menu options -->
  <category>
    <pattern>CAREER ASSESSMENT</pattern>
    <template>
      <think><set name="topic">career_assessment</set></think>
      Lovely—let’s get started with a three-question assessment.
      <srai>QUESTION 1</srai>
    </template>
  </category>

  <category>
    <pattern>LEARN ABOUT CAREERS</pattern>
    <template>
      <think><set name="topic">career_info</set></think>
      Which career would you like to learn more about?
      <button>Data Analyst</button>
      <button>Fullstack Developer</button>
      <button>UI Designer</button>
      <button>System Administrator</button>
      <button>Machine Learning Engineer</button>
    </template>
  </category>

  <category>
    <pattern>SALARY INFORMATION</pattern>
    <template>
      <think><set name="topic">salary_info</set></think>
      Which career’s salary information would you like?
      <button>Data Analyst</button>
      <button>Fullstack Developer</button>
      <button>UI Designer</button>
      <button>System Administrator</button>
      <button>Machine Learning Engineer</button>
    </template>
  </category>

  <!-- Fallback resets to general -->
  <category>
    <pattern>*</pattern>
    <template>
      <think><set name="topic">general</set></think>
      I’m sorry, I didn’t understand that. Please choose:
      <button>Return to Main Menu</button>
      <button>Career Assessment</button>
      <button>Learn About Careers</button>
      <button>Salary Information</button>
    </template>
  </category>

</aiml>
