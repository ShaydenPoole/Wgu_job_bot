    <template><think><set name="topic">career_info</set></think><srai>FULLSTACK DEVELOPER</srai></template>
  </category>
  <category><pattern>UI DESIGNER</pattern>
    <template><think><set name="topic">career_info</set></think><srai>UI DESIGNER</srai></template>
  </category>
  <category><pattern>SYSTEM ADMINISTRATOR</pattern>
    <template><think><set name="topic">career_info</set></think><srai>SYSTEM ADMINISTRATOR</srai></template>
  </category>
  <category><pattern>MACHINE LEARNING ENGINEER</pattern>
    <template><think><set name="topic">career_info</set></think><srai>MACHINE LEARNING ENGINEER</srai></template>
  </category>

</aiml>
