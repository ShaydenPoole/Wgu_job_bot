<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0">

  <topic name="career_info">

    <category><pattern>DATA ANALYST</pattern>
      <template>
        <think><set name="selected_career">Data Analyst</set></think>
        Here's information about becoming a Data Analyst:

        Data Analysts examine large datasets to identify trends, develop charts, and create visual presentations to help businesses make better decisions. They use tools like SQL, Python, R, and Excel.

        <link>
          <text>Learn more</text>
          <url>https://www.indeed.com/career-advice/finding-a-job/data-analyst-job-description</url>
        </link>

        <button>Get Salary Information</button>
        <button>Return to Main Menu</button>
      </template>
    </category>

    <category><pattern>FULLSTACK DEVELOPER</pattern>
      <template>
        <think><set name="selected_career">Fullstack Developer</set></think>
        Here's information about becoming a Fullstack Developer:

        Fullstack Developers work on both frontend and backend of web apps, using HTML, CSS, JavaScript, plus a backend language like Python or Java.

        <link>
          <text>Learn more</text>
          <url>https://www.indeed.com/hire/job-description/full-stack-developer</url>
        </link>

        <button>Get Salary Information</button>
        <button>Return to Main Menu</button>
      </template>
    </category>

    <category><pattern>UI DESIGNER</pattern>
      <template>
        <think><set name="selected_career">UI Designer</set></think>
        Here's information about becoming a UI Designer:

        UI Designers craft intuitive, aesthetically pleasing interfaces for digital products using tools like Figma, Adobe XD, and Sketch.

        <link>
          <text>Learn more</text>
          <url>https://uk.indeed.com/career-advice/finding-a-job/what-does-ui-designer-do</url>
        </link>

        <button>Get Salary Information</button>
        <button>Return to Main Menu</button>
      </template>
    </category>

    <category><pattern>SYSTEM ADMINISTRATOR</pattern>
      <template>
        <think><set name="selected_career">System Administrator</set></think>
        Here's information about becoming a System Administrator:

        System Administrators maintain, configure, and secure computer systems and networks.

        <link>
          <text>Learn more</text>
          <url>https://www.indeed.com/hire/job-description/system-administrator</url>
        </link>

        <button>Get Salary Information</button>
        <button>Return to Main Menu</button>
      </template>
    </category>

    <category><pattern>MACHINE LEARNING ENGINEER</pattern>
      <template>
        <think><set name="selected_career">Machine Learning Engineer</set></think>
        Here's information about becoming a Machine Learning Engineer:

        ML Engineers design, build, and deploy AI systems using algorithms and statistical models.

        <link>
          <text>Learn more</text>
          <url>https://www.indeed.com/career-advice/career-development/machine-learning-engineer</url>
        </link>

        <button>Get Salary Information</button>
        <button>Return to Main Menu</button>
      </template>
    </category>

    <!-- Salary branch -->
    <category><pattern>GET SALARY INFORMATION</pattern>
      <template>
        <think><set name="topic">salary_info</set></think>
        <srai>GET SALARY <get name="selected_career"/></srai>
      </template>
    </category>

    <category><pattern>RETURN TO MAIN MENU</pattern>
      <template>
        <think><set name="topic">general</set></think>
        <srai>MAIN MENU</srai>
      </template>
    </category>

    <category><pattern>*</pattern>
      <template>
        I didn't understand that. Which career would you like?
        <button>Data Analyst</button>
        <button>Fullstack Developer</button>
        <button>UI Designer</button>
        <button>System Administrator</button>
        <button>Machine Learning Engineer</button>
        <button>Return to Main Menu</button>
      </template>
    </category>

  </topic>

  <!-- global redirect into career_info -->
  <category><pattern>DATA ANALYST</pattern>
    <template><think><set name="topic">career_info</set></think><srai>DATA ANALYST</srai></template>
  </category>
